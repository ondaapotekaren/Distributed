# Send message to other vessels. Try as many times as specified by testnmbr
# ------------------------------------------------------------------------------
def rollback(lag,num):
  print "----------ROLLBACK------------"
  print "history: "
  print mycontext['history']
  if lag != 0:
    print "lag: " + str(lag)
    lastupdate = mycontext['history'][-num]
    print "lastupdate: "
    print lastupdate
    if lastupdate[0] == "ADD":
      delete_entry(lastupdate[2])
    rollback(lag-1,num+1)
  else:
    update_board(1)
